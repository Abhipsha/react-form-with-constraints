{
  "name": "react-form-with-constraints",
  "version": "0.5.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/tkrotoff/react-form-with-constraints.git"
  },
  "description": "Simple form validation for React",
  "license": "MIT",

  "main": "lib/index.js",
  "types": "lib/index.d.ts",

  "scripts": {
    "clean": "del-cli build lib dist/*.js coverage",

    "dist": "webpack --config webpack.dist.config.ts",

    "build": "webpack -d",
    "build:watch": "webpack -d --watch",

    "tsc": "tsc",
    "prepublishOnly": "npm run clean && npm run build && npm run tsc && npm run dist",

    "pretest": "npm run clean",
    "test": "node --trace-warnings node_modules/.bin/jest --no-cache --verbose",

    "precoverage": "npm run pretest",
    "coverage": "node --trace-warnings node_modules/.bin/jest --no-cache --coverage",

    "tslint": "tslint --config tslint.json '**/*.ts{,x}' --exclude '**/node_modules/**' --exclude 'lib/**'"
  },

  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"],

    "mapCoverage": true
  },

  "peerDependencies": {
    "react": ">=15",
    "prop-types": ">=15",
    "react-dom": ">=15"
  },

  "devDependencies": {
    "typescript": "latest",
    "tslint": "latest",
    "tslint-react": "latest",

    "react": "^15.6.2",
    "@types/react": "latest",
    "prop-types": "^15.6.0",
    "@types/prop-types": "latest",
    "react-dom": "^15.6.2",
    "@types/react-dom": "latest",

    "ts-node": "latest",
    "@types/node": "latest",

    "babel-core": "latest",
    "babel-preset-react": "latest",

    "webpack": "latest",
    "@types/webpack": "latest",
    "ts-loader": "latest",
    "babel-loader": "latest",
    "file-loader": "latest",

    "del-cli": "latest",

    "jest": "latest",
    "@types/jest": "latest",
    "ts-jest": "latest",

    "enzyme": "^2.9.1",
    "@types/enzyme": "latest",
    "react-test-renderer": "^15.6.2"
  }
}
